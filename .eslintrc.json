{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint/eslint-plugin"],
    "rules": {
      "indent": "off",
      "camelcase": "off",
      "semi": 1,
      "quotes": [1, "single"],
      "semi-style": ["error", "last"],
      "no-console": 1,
      "sort-imports": 0,
      "@typescript-eslint/indent": ["error", 2],
      "no-useless-constructor": "off"
    }
  }